import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        
        Scanner sc=new Scanner(System.in);
        String A=sc.next();
        String strrev="";
        for(int i=A.length()-1;i>=0;i--)
        {
            strrev=strrev+A.charAt(i);
        }
        if(A.equals(strrev))
        {
            System.out.println("Yes");
        }
        else
        {
            System.out.println("No");
        }
        
    }
}



