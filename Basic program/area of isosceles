//Area of isoscelees program
import java.util.*;
class Main 
{
    public static void main(String[]args)
    {
        Scanner sc=new Scanner(System.in);
        System.out.println("enter the base");
        int b=sc.nextInt();
        System.out.println("enter the height");
        int h=sc.nextInt();
        int area=(h*b)/2;
        System.out.println("area is:"+area);
    }
}
